# devbox server file

server {
    # IPv4
    listen *:8002;
    listen devbox:8002;

    # IPv6
    listen [::]:8002;

    root  /usr/local/var/www/devbox;

    # values can be name or alias
    # @see http://nginx.org/en/docs/http/ngx_http_core_module.html#server_name
    server_name devbox drupal-v7 devbox.me;  ## www.devbox.me

    access_log /usr/local/var/log/nginx/devbox.access.log;
    error_log  /usr/local/var/log/nginx/devbox.error.log debug;

    location / {
        index index.php index.html index.htm;
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        fastcgi_pass 127.0.0.1:9090;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;

        fastcgi_intercept_errors on;
        include fastcgi_params;
    }

    # maximum allowed size of the client request body (upload file size)
    #
    client_max_body_size 32M;

    # deny access to .htaccess files, if Apache's document root
    # concurs with nginx's one
    #
    location ~ /\.ht {
        deny  all;
    }
}

